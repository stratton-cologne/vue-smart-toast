{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist"
    },
    "include": ["src"]
}
